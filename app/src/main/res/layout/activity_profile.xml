<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.start.neighbourfood.pages.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <!-- Neighbor Food Logo-->
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/foodie" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!--  First Name Label -->
            <EditText
                android:id="@+id/profile_first_name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:paddingStart="5dp" />

            <!--  Last Name Label -->
            <EditText
                android:id="@+id/profile_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:paddingStart="5dp" />

        </LinearLayout>

        <!-- Mobile Label : User can not edit here -->
        <!-- This will be taken from the previous screen -->
        <EditText
            android:id="@+id/mobile_number_profile"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:hint="Phone"
            android:inputType="phone"
            android:paddingStart="5dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/apartment_name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:hint="Durga Coral Apartment"
            android:inputType="phone"
            android:paddingStart="5dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/flat_Number_profile"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:hint="F6"
            android:inputType="phone"
            android:paddingStart="5dp"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/green"
            android:text="SAVE"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/cancel_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey_500"
            android:text="CANCEL"
            android:textColor="@color/white"
            />
    </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
