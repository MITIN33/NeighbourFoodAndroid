<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:src="@drawable/defaultood" />

    <RelativeLayout
        android:id="@+id/rel_layout_1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/food_image"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/food_image">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/items_list"
                android:layout_width="185dp"
                android:layout_height="100dp"
                android:scrollbars="none"
                android:divider="@null" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/capriola"
            android:text="Usha Garg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/user_name"
            android:layout_marginTop="5dp"
            android:text="4/5"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_layout_1"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/food_image">


        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/background_border"
            android:layout_marginBottom="3dp"
            android:layout_height="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/flat_number_fragment"
            android:text="Served by Flat: 102"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/athiti_semibold"
            android:text="Explore"
            android:textSize="13sp" />

    </RelativeLayout>
</RelativeLayout>