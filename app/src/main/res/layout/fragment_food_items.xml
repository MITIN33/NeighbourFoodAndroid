<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:padding="15dp">

    <!--<ImageView
        android:id="@+id/food_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp" />-->
    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Samosa"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serving_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/food_item_name"
            android:layout_marginTop="2dp"
            android:text="2 Samosa with green chatni."
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/food_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/quantity_button"
            android:layout_below="@+id/serving_string"
            android:layout_marginTop="2dp"
            android:text="Rs. 20"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/quantity_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/food_item_name"
            android:layout_marginLeft="15dp"
            android:gravity="end"
            app:backGroundColor="@color/colorPrimary"
            app:initialNumber="0"
            app:textSize="8sp" />
    </LinearLayout>

</RelativeLayout>
